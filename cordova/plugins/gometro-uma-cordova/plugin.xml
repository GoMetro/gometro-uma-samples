<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0" id="gometro-uma-cordova" version="0.17.0">
    <name>GoMetro UMA</name>
    <author>GoMetro</author>
    <description>Official GoMetro UMA SDK for Cordova</description>
    <license>MIT</license>
    <keywords>ecosystem:cordova,cordova-android,android,gometro-uma</keywords>
    <repo>https://github.com/gometro/gometro-uma-cordova.git</repo>
    <issue>https://github.com/gometro/gometro-uma-cordova/issues</issue>

    <engines>
        <engine name="cordova" version=">=7.0.0"/>
        <engine name="cordova-android" version=">=3.5.0"/>
    </engines>

    <js-module src="src/js/gometro-uma.js" name="GoMetroUma">
        <clobbers target="GoMetroUma"/>
    </js-module>

    <!-- android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="GoMetroUma">
                <param name="android-package" value="com.gometro.uma.GoMetroUmaCordova"/>
                <param name="onload" value="true"/>
            </feature>
        </config-file>

        <hook src="platforms/android/src/main/javascript/useInternalRepo.js"
              type="before_build"/>

        <source-file src="platforms/android/src/main/java/com/gometroapp/uma/GoMetroUmaCordova.java"
                     target-dir="src/com/gometro/uma/"/>

        <framework src="com.gometro.uma:gometro-uma-android:1.0.2"/>
    </platform>
</plugin>
